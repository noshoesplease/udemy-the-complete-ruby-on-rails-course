<h4 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h4>

<div class="ui grid">
    <div class="twelve wide column">
        <div class="ui fluid card chatbox">
            <div class="content" id='messages'>
                <div class="ui feed">
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_with scope: :message, url: message_path, class: 'ui reply form', local: true do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body, placeholder: "Enter a message" %>
                            <%= f.button(type: 'submit', class: 'custom-class') do %>
                                <i class="bordered inverted orange edit icon button"></i>
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="four wide column">
        <div class="ui fluid card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="item">
                        Home
                    </a>
                        <a class="item">
                        Messages
                    </a>
                        <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
    