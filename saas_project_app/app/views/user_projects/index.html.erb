<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "User projects" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">User projects</h1>
    <%= link_to "New user project", new_user_project_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="user_projects" class="min-w-full">
    <% @user_projects.each do |user_project| %>
      <%= render user_project %>
      <p>
        <%= link_to "Show this user project", user_project, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
