<tr id='friend-<%= friend.id %>'>
    <th scope="row"><%= friend.email %></th>
    <td><%= friend.first_name %></td>
    <td><%= friend.last_name %></td>
    <td>
        <%= link_to "View Profile", user_path(friend), class: 'btn btn-sm btn-success' %>
        <%= button_to 'Stop following', friendship_path(friend), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %>
    </td>
</tr>