<h1>My Portfolio</h1>

<div class="row mb-3">
  <div class="col-9">
    <div class="search-area">
      <h3>Search Stocks</h3>
      <%= form_with url: search_stock_path, method: "get", data: { turbo_frame: "stock_results" } do %>
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg mb-3" %>
        <%# <%= csrf_meta_tags %> 
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row mb-3">
  <div class="col-9">
    <div id="stock-results">
      <%= turbo_frame_tag "stock_results" do %>
        <!-- Stock results will be rendered here -->
        <%= render 'users/result' %>
      <% end %>
    </div> 
  </div>
</div>

<%= render 'stocks/list' %>
