<div id='page-content'>
    <h1 class='text-center mt-4'>Listing all Categories</h1>
    
    <div class="flickr_pagination">
        <div class="page_info">
            <%= page_entries_info @categories %>
        </div>
        <%= will_paginate @categories, :container => false %>
    </div>
    
    <div class='container'>
        <% @categories.each do |category| %>
            <div class='row justify-content-md-center'>
                <div class='col-8 mt-4'>
                    <div class="shadow-lg card text-center">
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-success' %></h5>
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Created <%= time_ago_in_words(category.created_at) %> ago |
                                edited <%= time_ago_in_words(category.updated_at) %> ago
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <div class="flickr_pagination my-5">
        <div class="page_info">
            <%= page_entries_info @categories %>
        </div>
        <%= will_paginate @categories, :container => false %>
    </div>
</div>
