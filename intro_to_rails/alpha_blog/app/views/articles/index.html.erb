<div id='page-content'>
    <h1 class='text-center mt-4'>Listing all Articles</h1>

    <h2 class='text-center'>
        <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
    </h2>

    <div class='container'>
        <% @articles.each do |article| %>
            <div class='row justify-content-md-center'>
                <div class='col-8 mt-4'>
                    <div class="shadow-lg card text-center">
                        <div class="card-header">Featured</div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'text-success' %></h5>
                            <p class="card-text"><%= truncate article.description, length: 15 %></p>
                            <%= link_to 'View', article_path(article), class: 'btn btn-outline-success' %>
                            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-info' %>
                            <%= link_to 'Delete', article_path(article), class: 'btn btn-outline-danger', data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"} %>
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Created <%= time_ago_in_words(article.created_at) %> ago |
                                edited <%= time_ago_in_words(article.updated_at) %> ago
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>