<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
        <!-- Content goes here -->
        <h3 class='text-center my-4 text-4xl'>Course Listing</h3>

        <ul role="list" class="grid grid-cols-2 divide-y divide-gray-200">
            <% Course.all.each do |course| %>
                <li class="rounded-lg bg-white shadow px-4 py-4 flex w-64 flex-col text-center lg:w-auto">
                    <div class="group relative">
                        <div class="mt-6">
                            <h3 class="font-semibold text-sm text-gray-500"><%= course.short_name %>: <%= course.name %></h3>
                            <p class="mt-1 text-gray-900"><%= course.description %></p>
                            <a class='rounded bg-white px-2 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"' href="#">View Course</a>
                            <% if logged_in? and !(current_user.courses.include?(course)) %>
                                <%= link_to "Enroll", course_enroll_path(course_id: course.id), data: { turbo_method: :post }, class: 'rounded bg-white px-2 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50' %>
                            <% end %>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>