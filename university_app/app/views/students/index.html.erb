<div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
        <!-- Content goes here -->
        <h3 class='text-center my-4 text-4xl'>Students Directory</h3>

        <ul role="list" class="grid grid-cols-2 divide-y divide-gray-200">
            <% @students.each do |student| %>
                <li class="rounded-lg bg-white shadow px-4 py-4 flex w-64 flex-col text-center lg:w-auto">
                    <div class="group relative">
                        <div class="mt-6">
                            <h3 class="font-semibold text-sm text-gray-500">Name: <%= student.name %></h3>
                            <p class="mt-1 text-gray-900">Email: <%= student.email %></p>
                            <p class="mt-1 text-gray-900">Course Enrollments: None</p>
                            <a class='rounded bg-white px-2 py-1 text-xs font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"' href="#">View Profile</a>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>